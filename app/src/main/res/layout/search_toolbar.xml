<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etSearchText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/edittext_pdf_bg"
        android:drawableLeft="@drawable/ic_text_scale"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="@string/search_text"
        android:padding="@dimen/_8sdp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/search_bg"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBackPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/search_back_page"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchText"
        app:layout_constraintEnd_toStartOf="@+id/ivNextPage"
        app:layout_constraintTop_toTopOf="@+id/etSearchText"
        app:tint="@color/search_bg" />

    <ImageView
        android:id="@+id/ivNextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/search_next_page"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchText"
        app:layout_constraintEnd_toEndOf="@+id/etSearchText"
        app:layout_constraintTop_toTopOf="@+id/etSearchText" />

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etSearchText"
        app:layout_constraintTop_toTopOf="@+id/etSearchText"
        app:tint="@color/search_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>